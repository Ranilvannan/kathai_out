<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="story_tags_form" model="ir.ui.view">
        <field name="name">story.tags.form</field>
        <field name="model">story.tags</field>
        <field name="arch" type="xml">
            <form string="Tags">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="story_tags_tree" model="ir.ui.view">
        <field name="name">story.tags.tree</field>
        <field name="model">story.tags</field>
        <field name="arch" type="xml">
            <tree name="Tags" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="story_tags_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">story.tags</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="story_tags_menu" name="Tags" parent="story_menu" sequence="20"/>

</odoo>
