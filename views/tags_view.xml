<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="kathai_out_tags_form" model="ir.ui.view">
        <field name="name">kathai.out.tags.form</field>
        <field name="model">kathai.out.tags</field>
        <field name="arch" type="xml">
            <form string="Tags">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="kathai_out_tags_tree" model="ir.ui.view">
        <field name="name">kathai.out.tags.tree</field>
        <field name="model">kathai.out.tags</field>
        <field name="arch" type="xml">
            <tree name="Tags">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="kathai_out_tags_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">kathai.out.tags</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="kathai_out_tags_menu"
              name="Tags"
              parent="kathai_out_menu"
              action="kathai_out_tags_action"
              sequence="20"/>

</odoo>
