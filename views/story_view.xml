<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="kathai_kudu_story_form" model="ir.ui.view">
        <field name="name">kathai.kudu.story.form</field>
        <field name="model">kathai.kudu.story</field>
        <field name="arch" type="xml">
            <form string="Story">
                <sheet>
                    <group>
                        <field name="title"/>
                        <field name="preview"/>
                        <field name="tag_ids"/>
                    </group>
                    <notebook>
                        <page string="Content">
                            <field name="content_ids">
                                <tree editable="bottom">
                                    <field name="order_seq"/>
                                    <field name="paragraph"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="kathai_kudu_story_book_tree" model="ir.ui.view">
        <field name="name">kathai.kudu.story.tree</field>
        <field name="model">kathai.kudu.story</field>
        <field name="arch" type="xml">
            <tree name="Story">
                <field name="title"/>
                <field name="preview"/>
                <field name="tag_ids"/>
            </tree>
        </field>
    </record>

    <record id="kathai_kudu_story_action" model="ir.actions.act_window">
        <field name="name">Story</field>
        <field name="res_model">kathai.kudu.story</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="kathai_kudu_story_menu"
              name="Story"
              parent="kathai_kudu_menu"
              action="kathai_kudu_story_action"
              sequence="10"/>

</odoo>
